<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

       manifest     <com.shashank.sony.fancyaboutpagelib.FancyAboutPage
                android:id="@+id/fancyaboutpage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/circularImageView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="180dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/spinner_loading"
                    app:civ_border_color="#40FFFFFF"
                    app:civ_border_width="10dp" />

            </com.shashank.sony.fancyaboutpagelib.FancyAboutPage>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>