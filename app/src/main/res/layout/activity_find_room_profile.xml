                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Private"
