<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_texture"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_book_large_web" />

        <RelativeLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tvLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/automania"
                android:text="H"
                android:textColor="@color/colorSplash_large"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/tvSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/tvLarge"
                android:layout_marginTop="255dp"
                android:fontFamily="@font/linotte_semi_bold"
                android:text="student"
                android:textColor="@android:color/black"
                android:textSize="40sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnLogin"
                style="N?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="210dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/linotte_semi_bold"
                android:onClick="onClickSignUp"
                android:padding="15dp"
                android:text="Sign up"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/layout_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvSignUpClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickLogin"
                    android:text="Login"
                    android:textColor="@color/colorBrand"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>