<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_texture"
    tools:context=".SplashActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_book" />
        <RelativeLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
    <TextView
        android:id="@+id/font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="H"
        android:fontFamily="@font/automania"
        android:textSize="90sp"
        android:textColor="@color/colorSplash_large"/>

    <TextView
        android:id="@+id/tvSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_alignRight="@id/font"
        android:text="student"
        android:visibility="visible"
        android:textColor="@android:color/black"
        android:fontFamily="@font/linotte_semi_bold"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_alignTop="@id/font"
        style="N?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/linotte_semi_bold"
        android:onClick="onClickLogin"
        android:padding="15dp"
        android:text="@string/action_sign_in"
        android:visibility="invisible"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>