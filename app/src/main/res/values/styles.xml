<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!--<item name="android:textColorHint">@color/colorLightGray</item>-->
        <!--<item name="colorControlNormal">@color/colorWhite</item>-->
        <item name="colorControlActivated">#ff0000</item>
        <!--<item name="colorControlHighlight">@color/colorPrimary</item>-->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="HeaderBar">
        <item name="android:background">#303F9F</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="ThemeFullSCreen">
        <item name="android:windowBackground">@drawable/background_pre_splash</item>
    </style>

    <style name="ProfileTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
    </style>

    <style name="ForgetPasswordTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@color/colorTransparentOpacity</item>
    </style>

    <style name="EditProfuileTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_EditProfile</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_EditProfile</item>
        <item name="colorAccent">@color/colorAccent_EditProfile</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorDarkGray</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">#ff0000</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
